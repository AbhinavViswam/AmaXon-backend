        <canvas id="profitChart"></canvas>
    </div>
    <script>
      const profitData = <%- JSON.stringify(profitData) %>;
      const labels = profitData.map(item => `${item._id.year}-${item._id.month}`);
      const profits = profitData.map(item => item.totalProfit);

      const ctx = document.getElementById('profitChart').getContext('2d');

      new Chart(ctx, {
          type: 'bar',
          data: {
              labels: labels,
              datasets: [{
                  label: 'Monthly Profit',
                  backgroundColor: '#36A2EB',
                  data: profits
              }]
          },
          options: {
              responsive: true,
              scales: {
                  y: {
                      beginAtZero: true
                  }
              }
          }
      });
  </script>

