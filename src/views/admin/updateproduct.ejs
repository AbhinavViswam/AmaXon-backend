<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Product</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #f6f5f7;
            font-family: 'Montserrat', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px;
        }

        form {
            width: 50%;
            background: #fff;
            border-radius: 8px;
            padding: 30px 25px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 1.5rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .form-row {
            display: flex;
            justify-content: space-between; /* Align items evenly */
            gap: 10px; /* Space between inputs */
            margin-bottom: 15px;
        }

        .form-group {
            flex: 1; /* Make form-group take equal space */
            display: flex;
            flex-direction: column;
        }

        .form-group label {
            font-weight: 600;
            margin-bottom: 5px;
            color: #333;
        }

        input,
        select,
        textarea {
            padding: 8px; /* Smaller padding for a compact look */
            background-color: #f1f1f1;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 0.875rem;
            color: #333;
        }

        input:focus,
        textarea:focus,
        select:focus {
            border-color: #333;
            background-color: #fff;
        }

        textarea {
            resize: none;
            width: 100%;
            height: 80px;
            margin-top: 5px;
        }

        #charCount {
            font-size: 0.75rem;
            color: #666;
            text-align: right;
            margin-top: 5px;
        }

        input[type="submit"] {
            width: 100%;
            background: linear-gradient(135deg,#00294d, #0056b3);
            color: #fff;
            font-size: 1rem;
            font-weight: 600;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
            margin-top: 15px;
        }

        input[type="submit"]:hover {
            background: linear-gradient(135deg, #555, #333);
        }

        .error-message,
        .success-message {
            margin-top: 15px;
            padding: 10px;
            border-radius: 5px;
            font-size: 0.875rem;
            text-align: center;
        }

        .error-message {
            color: #ff4f4f;
            background-color: rgba(255, 79, 79, 0.1);
        }

        .success-message {
            color: #4caf50;
            background-color: rgba(76, 175, 80, 0.1);
        }

        a {
            display: block;
            margin-top: 15px;
            color: #00294d;
            text-align: center;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #333;
        }

        /* Media Queries */
        @media (max-width: 768px) {
            .form-row {
                flex-direction: column; /* Stack inputs on smaller screens */
            }
        }

        @media (max-width: 480px) {
            form {
                padding: 20px 15px;
            }
        }
    </style>
</head>
<body>
    <form action="/admin/update-product/<%= product._id %>" method="post" enctype="multipart/form-data">
        <h1>Update Product</h1>

        <div class="form-row">
            <div class="form-group">
                <label for="name">Product Name:</label>
                <input type="text" id="name" name="name" value="<%= product.name %>" required>
            </div>

            <div class="form-group">
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" placeholder="Author" required value="<%= product.author %>">
            </div>

            <div class="form-group">
                <label for="language">Language:</label>
                <input type="text" id="language" name="language" placeholder="Language" required value="<%= product.language %>">
            </div>
        </div>

        <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="textArea" name="description" placeholder="Product Description" maxlength="200" required><%= product.description %></textarea>
            <div id="charCount">Characters remaining: 200</div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="<%= product.price %>" required pattern="^\d+(\.\d{1,2})?$" inputmode="decimal" title="Please enter a valid price (e.g. 49.99)">
            </div>

            <div class="form-group">
                <label for="offerprice">Offer Price:</label>
                <input type="text" id="offerprice" name="offerprice" value="<%= product.offerprice %>" pattern="^\d+(\.\d{1,2})?$" inputmode="decimal" title="Please enter a valid offer price (e.g. 39.99)">
            </div>

            <div class="form-group">
                <label for="stock">Stock:</label>
                <input type="number" id="stock" name="stock" value="<%= product.stock %>" required pattern="^\d+$" placeholder="Stock">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="category">Category:</label>
                <select name="category" id="category" required>
                    <option value="<%= product.category._id %>"><%= product.category.name %></option>
                    <% categories.forEach((category) => { %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="image">Product Image:</label>
                <input type="file" id="image" name="image">
            </div>
        </div>

        <% if (error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>

        <% if (message) { %>
            <div class="success-message"><%= message %></div>
        <% } %>

        <input type="submit" value="Update Product">
        <a href="/admin/view-product">Go Back</a>
    </form>

    <script>
        const textArea = document.getElementById('textArea');
        const charCountDisplay = document.getElementById('charCount');
        const maxChars = 200;

        textArea.addEventListener('input', () => {
            const remainingChars = maxChars - textArea.value.length;
            charCountDisplay.textContent = `Characters remaining: ${remainingChars}`;
            if (remainingChars < 0) textArea.value = textArea.value.substring(0, maxChars);
        });
    </script>
</body>
</html>
