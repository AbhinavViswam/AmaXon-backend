<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - View All Products</title>

    <!-- Google Font for better typography -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    
    <!-- Basic Styling -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #080710;
            margin: 0;
            padding: 0;
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            text-align: center;
            margin-top: 10px;
            font-weight: 500;
            color: #ffffff;
        }

        .table-container {
            width: 90%;
            margin: 20px auto;
            max-height: 500px;
            overflow-y: auto;
            overflow-x: auto;
            border-radius: 8px;
            position: relative;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            overflow: hidden;
            min-width: 800px;
        }

        th, td {
            padding: 15px;
            text-align: center;
        }

        th {
            background-color: #ff512f;
            color: white;
            text-transform: uppercase;
            font-weight: 700;
            position: sticky;
            top: 0;
            z-index: 2;
        }

        td {
            font-size: 14px;
            color: #ffffff;
        }

        tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.05);
        }

        img {
            width: 100px;
            height: auto;
            border-radius: 8px;
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        /* Fix the button width and color for Block/Unblock */
        .actions button {
            width: 100px; /* Set a fixed width for consistency */
            background-color: #ff00005b;
            color: white;
            border: none;
            padding: 8px 12px;
            font-size: 14px;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        /* Block button - red */
        .actions .block-btn {
            background-color: red;
        }

        /* Unblock button - blue */
        .actions .unblock-btn {
            background-color: blue;
        }

        /* Hover effect */
        button:hover {
            background-color: #ff512f;
        }

        a {
            text-align: center;
            display: inline-block;
            margin: 10px;
            padding: 10px;
            background-color: #ff00005b;
            color: white;
            text-decoration: none;
            font-weight: bold;
            border-radius: 4px;
        }

        a:hover {
            background-color: #ff512f;
        }

        /* Scrollbar styling */
        .table-container::-webkit-scrollbar {
            width: 10px;
        }

        .table-container::-webkit-scrollbar-thumb {
            background: #ff512f;
            border-radius: 8px;
        }

        .table-container::-webkit-scrollbar-thumb:hover {
            background: #dd2476;
        }

        /* Align "Add Product" and "Go To Dashboard" buttons */
        .add-product-container {
            width: 90%;
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        @media (max-width: 768px) {
            table {
                display: block;
                overflow-x: auto;
                white-space: nowrap;
            }

            th, td {
                padding: 10px;
                font-size: 12px;
            }

            .add-product-container {
                flex-direction: column;
                align-items: center;
            }

            a {
                width: 80%;
                margin: 5px 0;
            }
        }
    </style>
</head>
<body>
    <h1>All Products</h1>

    <div class="table-container">
        <table border="1" cellpadding="10" cellspacing="0">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Rating</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.description %></td>
                        <td><%= product.rating %></td>
                        <td><%= product.category %></td>
                        <td>$<%= product.price %></td>
                        <td><%= product.stock %></td>
                        <td>
                            <% if (product.image) { %>
                                <img src="/<%= product.image %>" alt="Product Image">
                            <% } else { %>
                                No Image
                            <% } %>
                        </td>
                        <td>
                            <%= product.isBlocked ? "Blocked" : "Active" %>
                        </td>
                        <td class="actions">
                            <form action="/admin/update-product/<%= product._id %>" method="GET">
                                <button type="submit">Update</button>
                            </form>
                            <form action="/admin/delete-product/<%= product._id %>" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                            <form action="/admin/block-unblock-product/<%= product._id %>" method="POST">
                                <!-- Toggle button with red and blue for Block/Unblock -->
                                <button 
                                    type="submit" 
                                    class="<%= product.isBlocked ? 'unblock-btn' : 'block-btn' %>">
                                    <%= product.isBlocked ? "Unblock" : "Block" %>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div class="add-product-container">
        <a href="/admin/add-product">Add New Product</a>
        <a href="/admin/dashboard">Go To Dashboard</a>
    </div>
</body>
</html>
