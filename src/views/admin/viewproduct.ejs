<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - View All Products</title>
    
    <!-- Google Font for better typography -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    
    <!-- Basic Styling -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #080710;
            margin: 0;
            padding: 0;
            color: #fff;
        }
        
        h1 {
            text-align: center;
            margin-top: 20px;
            font-weight: 500;
            color: #ffffff;
        }
        
        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            overflow: hidden;
        }
        
        th, td {
            padding: 15px;
            text-align: center;
        }
        
        th {
            background-color: #ff512f;
            color: white;
            text-transform: uppercase;
            font-weight: 700;
        }
        
        td {
            font-size: 14px;
            color: #ffffff;
        }
        
        tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.05);
        }
        
        img {
            width: 100px;
            height: auto;
            border-radius: 8px;
        }
        
        .actions {
            display: flex;
            justify-content: center;
            gap: 10px;
        }
        
        button {
            background-color: #ff00005b;
            color: white;
            border: none;
            padding: 8px 12px;
            font-size: 14px;
            cursor: pointer;
            border-radius: 4px;
        }
        
        button:hover {
            background-color: #ff512f;
        }
        
        a {
            text-align: center;
            display: block;
            margin: 20px auto;
            width: 200px;
            padding: 10px;
            background-color: #ff00005b;
            color: white;
            text-decoration: none;
            font-weight: bold;
            border-radius: 4px;
        }
        
        a:hover {
            background-color: #ff512f;
        }
        
        /* Responsive design for smaller screens */
        @media (max-width: 768px) {
            table {
                width: 100%;
                font-size: 12px;
            }
            
            th, td {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <h1>All Products</h1>

    <table border="1" cellpadding="10" cellspacing="0">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Rating</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.description %></td>
                    <td><%= product.rating %></td>
                    <td><%= product.category %></td>
                    <td>$<%= product.price %></td>
                    <td><%= product.stock %></td>
                    <td>
                        <% if (product.image) { %>
                            <img src="/<%= product.image %>" alt="Product Image">
                        <% } else { %>
                            No Image
                        <% } %>
                    </td>
                    <td class="actions">
                        <form action="/admin/update-product/<%= product._id %>" method="GET">
                            <button type="submit">Update</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <a href="/admin/add-product">Add New Product</a>
</body>
</html>
