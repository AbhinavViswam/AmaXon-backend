<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Listings</title>
  <style>
    /* Base styles */
    body {
      font-family: 'Montserrat', sans-serif;
      background-color: #f6f5f7;
      margin: 0;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 20px;
      background: linear-gradient(90deg, #1c1f3b, #1a1a2e);
      color: #fff;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .navbar h2 {
      margin: 0;
    }

    .hamburger {
      font-size: 1.5em;
      cursor: pointer;
      color: #fff;
      display: block; /* Always show the hamburger icon */
    }

    .sidebar {
      width: 250px;
      padding: 20px;
      background: #ffffff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      position: fixed;
      top: 60px;
      left: -300px; /* Hide the sidebar initially */
      height: 100%;
      transition: left 0.5s ease;
      z-index: 100;
    }

    .sidebar.active {
      left: 0; /* Slide in */
    }

    .sidebar h3 {
      font-size: 1.2em;
      margin-bottom: 10px;
    }

    .sidebar select,
    .sidebar button {
      width: 100%;
      padding: 8px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 1em;
    }

    .sidebar button {
      background-color: #1c1f3b;
      color: #fff;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .sidebar button:hover {
      background-color: #3a3d61;
    }

    main {
      margin-left: 270px;
      padding: 20px;
      transition: margin-left 0.5s ease;
    }

    main h1 {
      font-size: 2em;
      color: #1c1f3b;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
    }

    .product-card {
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 15px;
      text-align: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .product-image img {
      width: 100%;
      height: auto;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .product-info h3 {
      font-size: 1.2em;
      margin: 10px 0;
      color: #333;
    }

    .original-price {
      text-decoration: line-through;
      color: #ff3f3f;
    }

    .discounted-price {
      color: #1c1f3b;
      font-weight: bold;
      font-size: 1.2em;
    }

    .view-details {
      display: inline-block;
      padding: 8px 12px;
      margin-top: 10px;
      color: #fff;
      background-color: #1c1f3b;
      border-radius: 4px;
      text-decoration: none;
      transition: background-color 0.3s;
    }

    .view-details:hover {
      background-color: #3a3d61;
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 100%; /* Full screen on mobile */
        left: -100%; /* Hide the sidebar */
      }

      .sidebar.active {
        left: 0; /* Slide in when active */
      }

      main {
        margin-left: 0;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <div class="navbar">
    <h2>STORY CAVE</h2>
    <div class="user-info">
      <span><%= user.fullName %></span>
    </div>
    <!-- Hamburger icon for sidebar toggle -->
    <div class="hamburger" onclick="toggleSidebar()">â˜°</div>
  </div>

  <!-- Sidebar for Filters -->
  <div class="sidebar" id="sidebar">
    <h3>Filter Options</h3>
    <form action="/users/product?" method="GET">
      <label for="category-select">Category:</label>
      <select id="category-select" name="category">
        <option value="">All Categories</option>
        <% categories.forEach(category => { %>
          <option value="<%= category._id %>" <%= selectedCategory == category._id ? 'selected' : '' %>><%= category.name %></option>
        <% }) %>
      </select>

      <label for="language-select">Language:</label>
      <select id="language-select" name="language">
        <option value="">All Languages</option>
        <% languages.forEach(language => { %>
          <option value="<%= language %>" <%= selectedLanguage === language ? 'selected' : '' %>><%= language %></option>
        <% }) %>
      </select>

      <label for="price-select">Price:</label>
      <select name="price">
        <option value="">All</option>
        <option value="asc">Low to High</option>
        <option value="des">High to Low</option>
      </select>

      <button type="submit">Apply Filter</button>
    </form>

    <form action="/users/logout" method="post">
      <button>logout</button>
    </form>
  </div>

  <!-- Main Content for Product Listings -->
  <main>
    <h1>Our Products</h1>
    <div class="product-grid">
      <% products.forEach(product => { %>
        <div class="product-card">
          <div class="product-image">
            <img src="<%= product.image %>" alt="<%= product.name %>">
          </div>
          <div class="product-info">
            <h3><%= product.name %></h3>
            <p class="price original-price">$<%= product.price.toFixed(2) %></p>
            <p class="price discounted-price">$<%= product.offerprice.toFixed(2) %></p>
            <a href="/users/product/<%= product._id %>/details" class="view-details">View Details</a>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('active');
      console.log('Sidebar toggle activated'); // Debugging check
    }
  </script>
</body>
</html>
